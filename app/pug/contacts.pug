extends templates/main-template

block variables
	- var pageTitle = 'Контакти'

block main
	include modules/header.pug
	.section-content
		h1 Зворотний зв'язок
		form.contact-form(id="contact-form")
			.row(id="form-notify")
				//- .message.message--error Повідомлення про помилку
				//- .message.message--success Форма успішно відправлена

			.contact-form__row
				input.input.input--half(type="text" id="input-name" name="contact-font-name" placeholder="Введіть ім'я")
				input.input.input--half(type="text" id="input-email" name="contact-font-email" placeholder="Введіть email")
			.contact-form__row
				textarea.textarea(id="input-message" name="contact-font-message" placeholder="Ваше повідомлення")
			.contact-form__row
				input.button(type="submit" id="input-sumbit" name="contact-font-sumbit" value="Відправити")
